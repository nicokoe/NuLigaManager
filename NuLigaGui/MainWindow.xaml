<Window x:Class="NuLigaGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuLigaGui"
        mc:Ignorable="d"
        Title="NuLiga Manager" Height="600" Width="1100">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="C" Modifiers="Control" Command="{Binding CopySelectedLeagueCommand}" />
    </Window.InputBindings>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Verbandsrunde 2025/26" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding Leagues}"
                     SelectedItem="{Binding SelectedLeague, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">
                <ListBox.ContextMenu>
                    <ContextMenu DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Exportieren als JSON-Datei"
                                  Command="{Binding Path=DataContext.ExportSelectedLeagueJsonCommand}"
                                  CommandParameter="{Binding Path=SelectedItem}" />
                        <MenuItem Header="Exportieren als CSV-Datei"
                                  Command="{Binding Path=DataContext.ExportSelectedLeagueCsvCommand}"
                                  CommandParameter="{Binding Path=SelectedItem}" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="{Binding SelectedLeague.Name}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="  " />
                    <TextBlock Text="(loading...)" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Zuklappen"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        ToolTip="Klappt Spieler oder Spielpaarungen zusammen"
                        Command="{Binding CollapseSelectionsCommand}" />
            </Grid>

            <DataGrid Grid.Row="1"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ItemsSource="{Binding GameDays}"
                      SelectedItem="{Binding SelectedGameDay, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,0,8"
                      ColumnWidth="Auto"
          VerticalAlignment="Top"
          ScrollViewer.VerticalScrollBarVisibility="Disabled"
          ScrollViewer.CanContentScroll="False"
          EnableRowVirtualization="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Runde" Binding="{Binding Round}" Width="50"/>
                    <DataGridTextColumn Header="Datum" Binding="{Binding Date, StringFormat=d}" Width="80"/>
                    <DataGridTextColumn Header="Heim" Binding="{Binding HomeTeam}" Width="*"/>
                    <DataGridTextColumn Header="DWZ" Binding="{Binding HomeTeamDWZ}" Width="60"/>
                    <DataGridTextColumn Header="Gast" Binding="{Binding GuestTeam}" Width="*"/>
                    <DataGridTextColumn Header="DWZ" Binding="{Binding GuestTeamDWZ}" Width="60"/>
                    <DataGridTextColumn Header="Ergebnis" Binding="{Binding BoardPoints}" Width="80"/>
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border Margin="8" Padding="6" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Background="#FAFAFA">
                            <DataGrid ItemsSource="{Binding Report.Pairings}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      Height="160"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      ColumnWidth="Auto"
                                      HorizontalAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Brett" Binding="{Binding BoardNumber}" Width="60"/>
                                    <DataGridTextColumn Header="Heim" Binding="{Binding HomePlayer}" Width="*"/>
                                    <DataGridTextColumn Header="DWZ" Binding="{Binding HomePlayerDWZ}" Width="60"/>
                                    <DataGridTextColumn Header="Gast" Binding="{Binding GuestPlayer}" Width="*"/>
                                    <DataGridTextColumn Header="DWZ" Binding="{Binding GuestPlayerDWZ}" Width="60"/>
                                    <DataGridTextColumn Header="Ergebnis" Binding="{Binding BoardPointsRaw}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
            
            <DataGrid Grid.Row="2"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding Teams}"
                  SelectedItem="{Binding SelectedTeamView, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rang" Binding="{Binding Rank}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="DWZ" Binding="{Binding AverageDwz}" Width="80"/>
                    <DataGridTextColumn Header="Spiele" Binding="{Binding Games}" Width="80"/>
                    <DataGridTextColumn Header="Punkte" Binding="{Binding Points}" Width="80"/>
                    <DataGridTextColumn Header="BP" Binding="{Binding BoardPointsSum}" Width="80"/>
                    <DataGridTextColumn Header="BW" Binding="{Binding BerlinTieBreak}" Width="80"/>
                </DataGrid.Columns>

                <DataGrid.InputBindings>
                    <KeyBinding Key="C" Modifiers="Control" Command="{Binding DataContext.CopySelectedTeamCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                </DataGrid.InputBindings>

                <DataGrid.Resources>
                    <ContextMenu x:Key="RowMenu">
                        <MenuItem Header="Spieler exportieren als JSON-Datei"
                                  Command="{Binding ExportSelectedTeamJsonCommand}"
                                  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=SelectedItem}" />
                        <MenuItem Header="Spieler exportieren als CSV-Datei"
                                  Command="{Binding ExportSelectedTeamCsvCommand}"
                                  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=SelectedItem}" />
                    </ContextMenu>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" >
                        <Setter Property="ContextMenu" Value="{StaticResource RowMenu}" />
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border Margin="4" Padding="6" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Background="#FAFAFA">
                            <DataGrid ItemsSource="{Binding PlayersTable}"
                                      AutoGenerateColumns="True"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      Height="160"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      ColumnWidth="Auto"
                                      AutoGeneratingColumn="PlayersDataGrid_AutoGeneratingColumn"
                                      HorizontalAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Auto">
                            </DataGrid>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </Grid>
    </Grid>
</Window>