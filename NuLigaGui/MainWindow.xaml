<Window x:Class="NuLigaGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuLigaGui"
        mc:Ignorable="d"
        Title="NuLiga Manager" Height="600" Width="1000">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="C" Modifiers="Control" Command="{Binding CopySelectedLeagueCommand}" />
    </Window.InputBindings>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Verbandsrunde 2025/26" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding Leagues}"
                     SelectedItem="{Binding SelectedLeague, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">
                <ListBox.ContextMenu>
                    <ContextMenu DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Export to JSON"
                                  Command="{Binding Path=DataContext.ExportSelectedLeagueJsonCommand}"
                                  CommandParameter="{Binding Path=SelectedItem}" />
                    </ContextMenu>
                </ListBox.ContextMenu>
                <!--<ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Export to JSON"
                                              Click="ExportJsonMenuItem_Click"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>-->
            </ListBox>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="{Binding SelectedLeague.Name}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Text="  " />
                <TextBlock Text="(loading...)" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" VerticalAlignment="Center"/>
            </StackPanel>

            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Teams}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rang" Binding="{Binding Rank}" Width="60"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="DWZ" Binding="{Binding AverageDwz}" Width="80"/>
                    <DataGridTextColumn Header="Spiele" Binding="{Binding Games}" Width="80"/>
                    <DataGridTextColumn Header="Punkte" Binding="{Binding Points}" Width="80"/>
                    <DataGridTextColumn Header="BP" Binding="{Binding BoardPointsSum}" Width="80"/>
                    <DataGridTextColumn Header="BW" Binding="{Binding BerlinTieBreak}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>