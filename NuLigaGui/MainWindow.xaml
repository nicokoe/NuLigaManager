<Window x:Class="NuLigaGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuLigaGui"
        mc:Ignorable="d"
        Title="NuLiga Manager" Height="450" Width="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Leagues" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Leagues}"
                 SelectedItem="{Binding SelectedLeague, Mode=TwoWay}"
                 DisplayMemberPath="Name" />
    </Grid>
</Window>